{% if id != false %}
    <form method="POST" action="/images/{{image.id}}  enctype="multipart/form-data"">
    <input name="id" type="hidden" value="{{image.id}}">
{% else %}
    <form method="POST" action="/images" enctype="multipart/form-data" >
 {% endif %}

    <div>
        {% if image is defined and image.id %}
            <img src="../../public/images/{{image.id}}.{{image.extension}}" alt="">
        {% endif %}
    </div>
    <div>
        <label for="image">Image</label>
        <input name="image" id="image"  type="file">
    </div>
    <div>
          <label for="">Variant:</label>
        <select name="variantId" id="variantId">
            {% for variant in variants %}
                <option value="{{variant.id}}" > {{variant.title}} </option>
            {% endfor %}
        
        </select>
    </div>
    {% if id != false %}
        <button type="submit" >Update Image</button>
    {% else %}
        <button type="submit" >Create New Image</button>
    {% endif %}

 </form>