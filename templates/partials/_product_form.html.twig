{% if id != false and id %}
    <form method="POST" action="/products/{{ product.id }}" style="width: 100%; max-width: 600px; margin: 0 auto; background-color: #fff; padding: 30px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <input name="id" type="hidden" value="{{ product.id }}">
{% else %}
    <form method="POST" action="/products" style="width: 100%; max-width: 600px; margin: 0 auto; background-color: #fff; padding: 30px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
{% endif %}

    <div style="margin-bottom: 15px;">
        <label for="title" style="font-weight: bold; display: block; margin-bottom: 5px;">
            Title:
        </label>
        <input name="title" type="text" id="title" value="{{ product.title }}" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div style="margin-bottom: 15px;">
        <label for="price" style="font-weight: bold; display: block; margin-bottom: 5px;">
            Price:
        </label>
        <input name="price" type="text" id="price" value="{{ product.price }}" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div style="margin-bottom: 15px;">
        <label for="description" style="font-weight: bold; display: block; margin-bottom: 5px;">
            Description:
        </label>
        <input name="description" type="text" id="description" value="{{ product.description }}" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div style="margin-bottom: 15px;">
        <label for="slug" style="font-weight: bold; display: block; margin-bottom: 5px;">
            Slug:
        </label>
        <input name="slug" type="text" id="slug" value="{{ product.slug }}" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div style="margin-bottom: 15px;">
        <h6 style="margin-bottom: 10px;">Published:</h6>
        <label style="margin-right: 10px;">
            <input type="radio" name="is_published" value="true" {% if product.is_published == true %}checked{% endif %}> True
        </label>
        <label>
            <input type="radio" name="is_published" value="false" {% if product.is_published == false %}checked{% endif %}> False
        </label>
    </div>

    {% if id != false %}
        <button type="submit" style="padding: 10px 20px; background-color: #007BFF; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer;">Update Product</button>
    {% else %}
        <button type="submit" style="padding: 10px 20px; background-color: #28a745; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer;">Create New Product</button>
    {% endif %}

</form>
